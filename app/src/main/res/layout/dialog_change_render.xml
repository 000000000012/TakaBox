<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/model_dialog_bg"
    android:orientation="vertical"
    android:padding="30pt">

    <TextView
        android:id="@+id/tvTextureView"
        android:layout_width="300pt"
        android:layout_height="40pt"
        android:background="@drawable/splash_focus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="TextureView"
        android:textColor="@android:color/black"
        android:textSize="18pt" />

    <TextView
        android:id="@+id/tvSurfaceView"
        android:layout_width="300pt"
        android:layout_height="40pt"
        android:layout_marginTop="30pt"
        android:background="@drawable/splash_focus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="SurfaceView"
        android:textColor="@android:color/black"
        android:textSize="18pt" />

</LinearLayout>